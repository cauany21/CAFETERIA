<%- include('../cabecalho.ejs') %>

<h1>Editar Funcionário</h1>
<a href="/funcionario/lst">Listar</a>

<form method="post">
    <input type="hidden" name="id" value="<%= funcionario._id %>">

    <label>ID do Funcionário:</label>
    <input type="text" name="id_funcionario" value="<%= funcionario.id_funcionario %>" required><br>

    <label>Nome:</label>
    <input type="text" name="nome" value="<%= funcionario.nome %>" required><br>

    <label>Cargo:</label>
    <input type="text" name="cargo" value="<%= funcionario.cargo %>" required><br>

    <label>Telefone:</label>
    <input type="text" name="telefone" value="<%= funcionario.telefone %>" required><br>

    <label>Salário:</label>
    <input type="number" name="salario" value="<%= funcionario.salario %>" required><br>

    <label>Data de Admissão:</label>
    <input type="date" name="data_admissao" value="<%= funcionario.data_admissao ? funcionario.data_admissao.toISOString().substring(0,10) : '' %>" required><br>

    <label>CPF:</label>
    <input type="text" name="cpf" value="<%= funcionario.cpf %>" required><br>

    <label>Email:</label>
    <input type="email" name="email" value="<%= funcionario.email %>" required><br>

    <button type="submit">Salvar</button>
</form>

<%- include('../rodape.ejs') %>