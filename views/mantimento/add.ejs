<%- include('../cabecalho.ejs') %>

<h1>Adicionar Mantimento</h1>
<a href="/mantimento/lst">Listar Mantimentos</a>

<form method="post">
    <label>ID do Mantimento:</label>
    <input type="text" name="id_mantimento" required><br>

    <label>Nome:</label>
    <input type="text" name="nome" required><br>

    <label>Validade:</label>
    <input type="date" name="validade" required><br>

    <label>Quantidade em Estoque:</label>
    <input type="number" name="quantidade_estoque" required><br>

    <label>Preço Unitário:</label>
    <input type="number" step="0.01" name="preco_unitario" required><br>

    <label>Fornecedor:</label>
    <select name="fornecedor" required>
        <option value="">Selecione o fornecedor</option>
        <% if (Fornecedor && Fornecedor.length) { Fornecedor.forEach(f => { %>
            <option value="<%= f._id %>"><%= f.nome %></option>
        <% }) } %>
    </select><br>

    <button type="submit">Cadastrar</button>
</form>

