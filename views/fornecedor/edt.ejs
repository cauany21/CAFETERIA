    <input type="text" name="id_fornecedor" value="<%= Fornecedor.id_fornecedor %>" required><br>

    <label>Nome:</label>
    <input type="text" name="nome" value="<%= Fornecedor.nome %>" required><br>

    <label>Telefone:</label>
    <input type="text" name="telefone" value="<%= Fornecedor.telefone %>" required><br>

    <label>Endere√ßo:</label>
