<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nossas Cafeterias - Café Belle Vie</title>
    <link rel="stylesheet" href="/css/site.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">
    <style>
        .cafeterias-container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .cafeterias-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .cafeterias-header h1 {
            font-size: 2.5rem;
            color: #2c1810;
            margin-bottom: 15px;
        }

        .cafeterias-header p {
            font-size: 1.1rem;
            color: #666;
        }

        .grid-cafeterias {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
            margin-bottom: 50px;
        }

        .card-cafeteria {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card-cafeteria:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .cafeteria-header-card {
            background: linear-gradient(135deg, #8b6f47 0%, #6d5636 100%);
            padding: 30px;
            color: white;
            text-align: center;
        }

        .cafeteria-nome {
            font-size: 1.8rem;
            margin: 0;
            margin-bottom: 10px;
            font-family: 'Playfair Display', serif;
        }

        .cafeteria-body {
            padding: 25px;
        }

        .info-item {
            display: flex;
            align-items: flex-start;
            margin-bottom: 18px;
            gap: 12px;
        }

        .info-item svg {
            width: 20px;
            height: 20px;
            color: #8b6f47;
            flex-shrink: 0;
            margin-top: 2px;
        }

        .info-item-text {
            flex: 1;
        }

        .info-item-label {
            font-size: 0.85rem;
            color: #999;
            text-transform: uppercase;
            margin-bottom: 3px;
        }

        .info-item-value {
            color: #2c1810;
            font-weight: 500;
            line-height: 1.4;
        }

        .btn-ver-produtos {
            width: 100%;
            background-color: #8b6f47;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s;
            margin-top: 15px;
        }

        .btn-ver-produtos:hover {
            background-color: #6d5636;
        }

        .vazio {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .vazio h2 {
            color: #2c1810;
        }

        @media (max-width: 768px) {
            .grid-cafeterias {
                grid-template-columns: 1fr;
            }

            .cafeterias-header h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header-container">
            <div class="logo">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 8h1a4 4 0 1 1 0 8h-1"/>
                    <path d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z"/>
                    <line x1="6" x2="6" y1="2" y2="4"/>
                    <line x1="10" x2="10" y1="2" y2="4"/>
                    <line x1="14" x2="14" y1="2" y2="4"/>
                </svg>
                <h1><a href="/" style="color: white; text-decoration: none;">Café Belle Vie</a></h1>
            </div>

            <nav id="desktop-nav">
                <a href="/">Início</a>
                <a href="/produtos">Produtos</a>
                <a href="/cafeterias">Cafeterias</a>
                <a href="/contato">Contato</a>
                <a href="/admin" style="margin-left:12px;border-left:1px solid rgba(255,255,255,0.12);padding-left:12px;color:white;font-weight:600;">Admin</a>
            </nav>

            <button class="mobile-menu-btn" onclick="toggleMobileMenu()">
                <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="3" x2="21" y1="6" y2="6"/>
                    <line x1="3" x2="21" y1="12" y2="12"/>
                    <line x1="3" x2="21" y1="18" y2="18"/>
                </svg>
            </button>
        </div>

        <nav id="mobile-nav" class="mobile-nav">
            <a href="/" onclick="toggleMobileMenu()">Início</a>
            <a href="/produtos" onclick="toggleMobileMenu()">Produtos</a>
            <a href="/cafeterias" onclick="toggleMobileMenu()">Cafeterias</a>
              <a href="/contato" onclick="toggleMobileMenu()">Contato</a>
              <a href="/admin" onclick="toggleMobileMenu()">Admin</a>
        </nav>
    </header>

    <!-- Cafeterias Section -->
    <div class="cafeterias-container">
        <div class="cafeterias-header">
            <h1>Nossas Cafeterias</h1>
            <p>Visite-nos em qualquer um de nossos espaços aconchegantes</p>
        </div>

        <% if (cafeterias && cafeterias.length > 0) { %>
            <div class="grid-cafeterias">
                <% cafeterias.forEach(cafe => { %>
                    <div class="card-cafeteria">
                        <div class="cafeteria-header-card">
                            <h2 class="cafeteria-nome"><%= cafe.nome %></h2>
                        </div>
                        <div class="cafeteria-body">
                            <% if (cafe.endereco) { %>
                                <div class="info-item">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                                        <circle cx="12" cy="10" r="3"/>
                                    </svg>
                                    <div class="info-item-text">
                                        <div class="info-item-label">Endereço</div>
                                        <div class="info-item-value"><%= cafe.endereco %></div>
                                    </div>
                                </div>
                            <% } %>

                            <% if (cafe.telefone) { %>
                                <div class="info-item">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                                    </svg>
                                    <div class="info-item-text">
                                        <div class="info-item-label">Telefone</div>
                                        <div class="info-item-value"><%= cafe.telefone %></div>
                                    </div>
                                </div>
                            <% } %>

                            <% if (cafe.horario) { %>
                                <div class="info-item">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="10"/>
                                        <polyline points="12 6 12 12 16 14"/>
                                    </svg>
                                    <div class="info-item-text">
                                        <div class="info-item-label">Horário de Funcionamento</div>
                                        <div class="info-item-value"><%= cafe.horario %></div>
                                    </div>
                                </div>
                            <% } %>

                            <% if (cafe.cnpj) { %>
                                <div class="info-item">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
                                    </svg>
                                    <div class="info-item-text">
                                        <div class="info-item-label">CNPJ</div>
                                        <div class="info-item-value"><%= cafe.cnpj %></div>
                                    </div>
                                </div>
                            <% } %>

                            <button class="btn-ver-produtos" onclick="window.location.href='/produtos'">
                                ☕ Ver Produtos Disponíveis
                            </button>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="vazio">
                <h2>Nenhuma cafeteria cadastrada ainda</h2>
                <p>Em breve estaremos em sua região!</p>
            </div>
        <% } %>
    </div>

    <!-- Footer -->
    <footer style="background-color: #2c1810; color: white; text-align: center; padding: 30px; margin-top: 50px;">
        <p>&copy; 2024 Café Belle Vie - Todos os direitos reservados</p>
    </footer>

    <script>
        function toggleMobileMenu() {
            const mobileNav = document.getElementById('mobile-nav');
            const menuIcon = document.getElementById('menu-icon');
            mobileNav.classList.toggle('active');
            menuIcon.classList.toggle('active');
        }
    </script>
</body>
</html>
